<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@android:color/black">


    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="283dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/defaultuser1" />

    <TextView
        android:id="@+id/profile_display_name"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="Display Name"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/profile_status"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_display_name"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:text="Current USer Status"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textSize="16sp" />



    <Button
        android:id="@+id/friend_request_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/profile_status"
        android:text="Send Friend Request"
        android:layout_marginTop="60dp"
        android:textColor="#ffff"
        android:backgroundTint="@color/colorAccent"
        android:paddingRight="20dp"
        android:paddingLeft="20dp" />
    <Button
        android:id="@+id/decline_request_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/friend_request_btn"
        android:text="Decline Friend Request"
        android:layout_marginTop="10dp"
        android:textColor="#ffff"
        android:backgroundTint="@color/colorAccent"
        android:paddingRight="20dp"
        android:paddingLeft="20dp" />

</RelativeLayout>